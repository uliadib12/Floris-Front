---
import Card from './Card'
---

<div class="min-h-screen">
    <div class="flex flex-row items-center justify-center gap-2 mb-3">
        <i class="bi bi-cart text-pink-500 text-3xl"></i>
        <h1 
            id="title"
            style={{fontFamily: 'Cormorant Garamond sans-serif'}}
            class="text-3xl font-semibold italic text-pink-500">
            Cart
        </h1>
    </div>
    <div class="flex flex-col gap-4 p-4 items-center">
        <Card client:load/>
        <Card client:load/>
        <Card client:load/>
        <Card client:load/>
    </div>
    <div class="fixed bottom-0 left-0 right-0 p-4 flex justify-end z-50">
        <button class="flex gap-2 bg-pink-400 border-solid border-white border-2 px-4 py-2 rounded-md text-white">
            Go To Checkout
            <img src="/icons/bag-check.svg" width={20} height={20} alt="home" style={{filter: 'invert(1)'}}/>
        </button>
    </div>
</div>